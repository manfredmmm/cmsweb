- unless @search.nil?
  %h1 Resultats de la búsqueda

  #search_bar
    %h3 Professors
    - if @search.empty?
      %p No hi ha resultats de professors amb la búsqueda realitzada.
    - else
      %ul
      - @search.each do |s|
        %li
          = image_tag(s.avatar_url.to_s, :title => s.name + " " + s.surname, :alt => s.name + " " + s.surname)
          = link_to "#{s.name} #{s.surname}", teacher_path(s)
    %h3 Espais web
    - if @web_search.empty?
      %p No hi ha resultats d'espais webs amb la búsqueda realitzada.
    - else
      %ul
        - @web_search.each do |w|
          %li
            =link_to "#{w.name}", teacher_web_space_page_path(w.teacher.id,w,w.pages.first)
            = " ("
            =link_to "#{w.teacher.name} #{w.teacher.surname}", teacher_path(w.teacher.id)
            = ")"

- else
  %h1 Últimes Novetats

  #webspaces
    %h3 Espais webs
    %ul
    - @webspaces.each do |espai|
      #web{:id => espai.name}
        %li
          .espai= link_to espai.name, teacher_web_space_page_path(espai.teacher, espai, espai.pages.first)
          .owner
            = "[  "
            = link_to "#{espai.teacher.name} " "  #{espai.teacher.surname}", teacher_path(espai.teacher)
            = "  - #{espai.updated_at.strftime('%H:%M - %d/%m/%Y')} ]"

  #teachers
    %h3 Últims professors donats d'alta
    %ul
    - @teachers.each do |teacher|
      #teacher{:id => teacher.name}
        %li
          .teacher= link_to("#{teacher.name} #{teacher.surname}", teacher_path(teacher))
          .date= " [ " + teacher.created_at.strftime('%H:%M - %d/%m/%Y').to_s + " ]"
