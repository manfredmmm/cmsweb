<!DOCTYPE html>
<html>
<head>
	<%= stylesheet_link_tag :all %>
	<%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'ckeditor/ckeditor' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tag %>
	
	<!-- Seccio del titul -->
	<div id="title">
		<title>PFC - Gestor de contingut</title>
	</div>
  
</head>
<body>
	
	<!-- Menu esquerra -->
	<div id="menu">
		<!-- Sessio usuari -->
		<div id="user_nav">
		  <% if user_signed_in? %>
		    Has entrat com a <%= current_user.email %> - 
		    <%= link_to "Sortir", destroy_user_session_path %>
		  <% else %>
		    <%= link_to "Registrar-se", new_user_registration_path %> or <%= link_to "Entrar", new_user_session_path %>
		  <% end %>
		</div>
	</div>
	
	<!-- Contingut de la web -->
	<div id="cos">
	</div>

<%= yield %>

</body>
</html>
