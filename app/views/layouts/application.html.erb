<!DOCTYPE html>
<html>
<head>
	
	<%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
	
	<!-- Seccio del titul -->
	<div id="title">
		<title>PFC - Gestor de contingut</title>
	</div>
  
</head>
<body>
	
	<!-- Menu esquerra -->
	<div id="menu">
		<!-- Sessio usuari -->
		<div id="user_nav">
		  <% if user_signed_in? %>
		    Signed in as <%= current_user.email %>. Not you?
		    <%= link_to "Sign out", destroy_user_session_path %>
		  <% else %>
		    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>
		  <% end %>
		</div>
	</div>
	
	<!-- Contingut de la web -->
	<div id="cos">
	</div>

<%= yield %>

</body>
</html>
