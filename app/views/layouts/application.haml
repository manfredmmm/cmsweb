!!! html
%html
  %head
    %title PFC - Gestor de contingut
    %meta{:charset => "utf-8"}
    = csrf_meta_tag
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application'
  %body
    #wrapper
      #header
        %ul#menu
          - if user_signed_in?
            %li= link_to "NotÃ­cies", root_path
            - unless current_user.admin?
              %li= link_to "Els meus espai webs", teacher_my_spaces_path(current_user)
              %li= link_to "Espais webs", teacher_web_spaces_path(current_user)
            %li= link_to "Professors i investigadors", teachers_path
            %li= link_to "Sortir", destroy_user_session_path
            #search_bar
              = form_tag root_path, :method => :get do
                = text_field_tag :search, params[:search], :placeholder => "Buscar"
      #content
        - unless flash[:notice].nil?
          %p.flash= flash[:notice]
        = yield
      #footer
        %ul.footer_nav
          - if user_signed_in?
            %li= current_user.email
          - if user_signed_in? && current_user.admin?
            %li= link_to "Professors", admin_teachers_path
            %li= link_to "Departaments", admin_departments_path
          - if user_signed_in? && current_user.teacher?
            %li= link_to "Editar perfil", edit_teacher_path(current_user)
