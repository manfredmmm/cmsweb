!!! html
%html
  %head
    %title PFC - Gestor de contingut
    %meta{:charset => "utf-8"}
    = csrf_meta_tag
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application'
  %body
    #wrapper
      #header
        = render_navigation
        - unless current_user.nil?
          #search_bar
            = form_tag root_path, :method => :get do
              = text_field_tag :search, params[:search], :placeholder => "Buscar"
      #content
        - unless flash[:notice].nil?
          %p.flash= flash[:notice]
        - unless flash[:error].nil?
          %p.flash= flash[:notice]
        = yield
      #footer
        %ul.footer_nav
          - if user_signed_in?
            %li.current= current_user.email.truncate(20)
          - if user_signed_in? && current_user.admin?
            %li= link_to("Professors", admin_teachers_path)
            %li= link_to("Departaments", admin_departments_path)
            %li.out= link_to("Sortir", destroy_user_session_path)
          - if user_signed_in? && current_user.teacher?
            %li.edit= link_to("Editar perfil", edit_teacher_path(current_user))
            %li.out= link_to("Sortir", destroy_user_session_path)
