!!! html
%html
  %head
    %title PFC - Gestor de contingut
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery'
    = javascript_include_tag 'rails'
    = javascript_include_tag 'ckeditor/ckeditor'
    = javascript_include_tag 'application'
    = csrf_meta_tag	
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    /[if It IE 8]
      = stylesheet_link_tag 'ie,css', :media => 'screen, projection'

  %body
    #wrapper
      - if flash[:error].nil?
        %p= flash[:error]
      #header
        %ul#user_nav
          - if user_signed_in?
            /%li= link_to current_user.name + " " + current_user.surname + " | " + current_user.email, edit_teacher_path(current_user)
            %li= link_to "Sortir", destroy_user_session_path
          - else
            %li= link_to "Registrar-se", new_user_registration_path 
            %li= link_to "Entrar", new_user_session_path
        %ul#menu
          - if user_signed_in?
            %li= link_to "Gestionar les meves webs", teacher_web_spaces_path(current_user)
            %li= link_to "Directori web", teacher_web_spaces_path(current_user)
            %li= link_to "Directori del personal", teachers_path
      #content
        = yield
      #footer
        - if user_signed_in? && current_user.admin?
          %li= link_to "Professors", admin_teachers_path
          %li= link_to "Departaments", admin_departments_path

