= form_for(@web_space) do |f|
  - if @web_space.errors.any?
    %div#error_explanation
      %h2= pluralize(@web_space.errors.count, "error")
      %ul
        = @web_space.errors.full_messages.each do |msg|
          %li= msg
    
  %div.field
    = f.label :name
    = f.text_field :name
    
  %div.field
    = f.label :teacher_id
    = f.select :teacher_id, @teachers.collect{|d| [d.name, d.id]},{:include_blank => true}
    
  %div.field
    = f.label :content
    = f.text_area :content, :class => "editor"
    
  %div.actions
    = f.submit
