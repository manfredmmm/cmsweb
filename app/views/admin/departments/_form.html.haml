= form_for([:admin, @department]) do |f|
  - if @department.errors.any?
    #error_explanation
      %h2= "#{pluralize(@department.errors.count, "error")} prohibited this item from being saved:"

      %ul
        - @department.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :nom
    %br
    =f.text_field :name
  .field
    =f.label :descripcio
    %br
    =f.text_field :description
  .actions
    =f.submit 'Crear/Modificar'
