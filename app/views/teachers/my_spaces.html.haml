%h1= t('teachers.my_spaces.title')

%table{:class => "table table-striped"}
  %thead
    %td Title
    %td Description
    %td Actions
  %tbody
    - @my_web_spaces.each do |web_space|
      %tr
        %td= link_to(web_space.name.upcase, teacher_web_space_page_path(web_space.teacher, web_space, web_space.pages.first))
        %td= web_space.content
        %td
          = link_to t('teachers.my_spaces.delete'), teacher_web_space_path(@teacher, web_space), :confirm => t('alerts.sure'), :method => :delete, :class => "btn btn-danger"
          = link_to t('teachers.my_spaces.change'), edit_teacher_web_space_path(@teacher, web_space), :class => "btn btn-info"

= link_to t('teachers.my_spaces.create'), new_teacher_web_space_path(@teacher), :class => "btn btn-primary"
