%h1 Professors i investagadors

#departments
  - @departments.each do |department|
    %ul.department{:id => department.name}
      - if !department.teachers.empty?
        %h2= department.name
        - department.teachers.each do |t|
          %ul.teacher{:id => t.id}
            .avatar=  image_tag(t.avatar_url.to_s, :title => t.name + " " + t.surname, :alt => t.name + " " + t.surname)
            %li
              = t.name.to_s + " " + t.surname.to_s
              %br
              = t.email.to_s
              %br
              = "Despatx: " + t.office.to_s
              %br
              = "Recerca: " + t.research_area.to_s
